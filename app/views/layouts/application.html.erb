<!DOCTYPE html>
<html>
  <head>
    <title>CryptoBox</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <div class="container">
    <div class="row">
        <div class="col-xs-12">
           <% flash.each do |name, msg| %>
              <%= content_tag :div, msg, class: "alert alert-success" %>
            <% end %>
        </div>
    </div>
</div>
   

    <%= yield %>
  </body>
</html>
