<div class="container">
    <div class="row">
        <div class="col-xs-12">
          <h1>Sign up</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
        
                  
          <%= form_for(@user) do |f| %>
            <%= f.label :user_name %>
            <%= f.text_field :user_name, :class => "form-control" %>

            <%= f.label :password %>
            <%= f.password_field :password, :class => "form-control"%>

            <%= f.submit 'Create Account ', :class => 'btn btn-sm btn-pill btn-success',style: 'float:right; margin-top: 40px;' %>
            
          <% end %>

        </div>
    </div>
</div>




